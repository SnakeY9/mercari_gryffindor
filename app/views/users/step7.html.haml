.step7-single_container
  %header.step7-single_container__header
    %h1
      = link_to image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308', alt: 'mercari', height: '49', width: '185', class: 'step3-single_container__header__logo'), "https://www.mercari.com/jp/"
    %nav.step7-single_container__header__progress-bar.step7-single_container__header__signup-bar
      %ol.clearfix
        %li.step7-single_container__header__progress-bar__active
          会員情報
          .step7-single_container__header__progress-bar__active__status
          .step7-single_container__header__progress-bar__active__status:after
        %li.step7-single_container__header__progress-bar__active
          電話番号認証
          .step7-single_container__header__progress-bar__active__status:before
          .step7-single_container__header__progress-bar__active__status:after
        %li.step7-single_container__header__progress-bar__active
          お届け先住所入力
          .step7-single_container__header__progress-bar__active__status:before
          .step7-single_container__header__progress-bar__active__status:after
        %li.step7-single_container__header__progress-bar__active
          支払い方法
          .step7-single_container__header__progress-bar__active__status:before
          .step7-single_container__header__progress-bar__active__status:after
        %li.step7-single_container__header__progress-bar__active
          完了
          .step7-single_container__header__progress-bar__active__status:before
          .step7-single_container__header__progress-bar__active__status:after
  %main.single-main
    %section.l-single-container
      %h2.l-capter-head
        支払い方法
      = form_with url: credits_path, method: :post, id: 'charge-form' do |form|
        .l-single-content
          .form-group
            = form.label :カード番号
            %span.form-require
              必須
            = form.text_field :credits_number, type: 'text', placeholder: '半角数字のみ', maxlength: "16"

          .form-group
            = form.label :有効期限
            %span.form-require
              必須
            %br
            .form-group__wrap
              = form.select :exp_month, [["01", 1],["02", 2],["03", 3],["04", 4],["05", 5],["06", 6],["07", 7],["08", 8],["09", 9],["10", 10],["11", 11],["12", 12]], {}, class: 'credit-expire'
              %i.fas.fa-angle-down.payment-select-icon
              %span.expire-text 月
              %br
            .form-group__wrap
              =form.select :exp_year, [["19", 2019],["20", 2020],["21", 2021],["22", 2022],["23", 2023],["24", 2024],["25", 2025],["26", 2026],["27", 2027],["28", 2028],["29", 2029]], {}, class: 'credit-expire'
              %i.fas.fa-angle-down.payment-select-icon
              %span.expire-text 年
              %br

          .form-group
            = form.label :セキュリティコード
            %span.form-repuire
              必須
            = form.text_field :cvc, type: 'text', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"

