.step3-single_container
  %header.step3-single_container__header
    %h1
      = link_to image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308', alt: 'mercari',height: '49', width: '185', class: 'step3-single_container__header__logo'), "https://www.mercari.com/jp/"
    %nav.step3-single_container__header__progress-bar.step3-single_container__header__signup-bar
      %ol.clearfix
        %li.step3-single_container__header__progress-bar__active
          会員情報
          .step3-single_container__header__progress-bar__active__status
          .step3-single_container__header__progress-bar__active__status:after
        %li
          電話番号認証
          .step3-single_container__header__progress-bar__active__status
            .step3-single_container__header__progress-bar__active__status:before
            .step3-single_container__header__progress-bar__active__status:after
        %li
          お届け先住所入力
          .step3-single_container__header__progress-bar__active__status
            .step3-single_container__header__progress-bar__active__status:before
            .step3-single_container__header__progress-bar__active__status:after
        %li
          支払い方法
          .step3-single_container__header__progress-bar__active__status
            .step3-single_container__header__progress-bar__active__status:before
            .step3-single_container__header__progress-bar__active__status:after
        %li
          完了
          .step3-single_container__header__progress-bar__active__status
          .step3-single_container__header__progress-bar__active__status:before
.complete
  %main.complete-main
    .complete-main__box
      %h1 会員登録完了
      .complete-main__box__form
        %p ありがとうございます。
        %p 会員登録が完了しました。
        .complete-main__box__form__link
          %a.btn{href: "https://www.mercari.com/jp/signup/registration/"}
            メルカリをはじめる
      .backimage
        .backimage__title
          スマホでかんたんフリマアプリ
          .backimage__title--second
            今すぐ無料ダウンロード！ 
        .backimage__icon
          = link_to "/", class: "download__display__content__left__icon__app" do
            = image_tag "appstore-icon.svg", class: "download__display__content__left__icon__app__store"
          = link_to "/", class: "download__display__content__left__icon__google" do
            = image_tag "google-play.svg", class: "download__display__content__left__icon__google__play"
        .backimage__phone
          = image_tag "download_app.png", class: "download__display__content__right__phone-image"    
    = render "users/footer"    