.step8-single_container
  %header.step8-single_container__header
    %h1
      = link_to image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308', alt: 'mercari',height: '49', width: '185', class: 'step8-single_container__header__logo'), "https://www.mercari.com/jp/"
    %nav.step8-single_container__header__progress-bar.step8-single_container__header__signup-bar
      %ol.clearfix
        %li.step8-single_container__header__progress-bar__active
          会員情報
          .step8-single_container__header__progress-bar__active__status
        %li.step8-single_container__header__progress-bar__second-active
          電話番号認証
          .step8-single_container__header__progress-bar__second-active__status
        %li.step8-single_container__header__progress-bar__third-active
          お届け先住所入力
          .step8-single_container__header__progress-bar__third-active__status
        %li.step8-single_container__header__progress-bar__fourth-active
          支払い方法
          .step8-single_container__header__progress-bar__fourth-active__status
        %li.step8-single_container__header__progress-bar__last-active
          完了
          .step8-single_container__header__progress-bar__last-active__status-last
        .clearfix
.complete
  %main.complete__main
    .complete__main__box
      %h1 会員登録完了
      .complete__main__box__form
        %p ありがとうございます。
        %p 会員登録が完了しました。
        .complete__main__box__form__link
          = link_to "メルカリをはじめる", "https://www.mercari.com/jp/signup/registration/", class: "btn"
      .backimage
        .backimage__title
          スマホでかんたんフリマアプリ
          .backimage__title--second
            今すぐ無料ダウンロード！ 
        .backimage__icon
          = link_to "/", class: "download__display__content__left__icon__app" do
            = image_tag "appstore-icon.svg", class: "download__display__content__left__icon__app__store"
          = link_to "/", class: "download__display__content__left__icon__google" do
            = image_tag "google-play.svg", class: "download__display__content__left__icon__google__play"
        .backimage__phone
          = image_tag "download_app.png", class: "download__display__content__right__phone-image"    
    = render "users/footer"    