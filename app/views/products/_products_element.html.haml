%div
  = link_to product_path(products_element.id), class: "contents__content__category-list__box__elements__element__link" do
    %figure.contents__content__category-list__box__elements__element__link__detail
      -# %figcaption.contents__content__category-list__box__elements__element__link__detail__caption
        %span
      .contents__content__category-list__box__elements__element__link__detail__image
        = image_tag products_element.product_images.first.image.url, size: "188x188"
        %span{"aria-label" => "Price"}
        .contents__content__category-list__box__elements__element__link__detail__price
          = "Â¥#{products_element.price}"
    .contents__content__category-list__box__elements__element__link__detail__text
      = products_element.name