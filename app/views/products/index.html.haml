                = render "products_element"
                = render "products_element"
                = render "products_element"
        .contents__content__popular-brand
          %h2.contents__content__popular-brand__name
            人気のブランド
          .contents__content__popular-brand__genre
            %ul.contents__content__popular-brand__genre__elements
              %li.contents__content__popular-brand__genre__elements__element
                シャネル
              %li.contents__content__popular-brand__genre__elements__element
                ルイヴィトン
              %li.contents__content__popular-brand__genre__elements__element
                シュプリーム
