          %i.fab.fa-twitter.prodccts-show__link-box__media__list__twitter__icon
      %li.prodccts-show__link-box__media__list
        = link_to "",class: "prodccts-show__link-box__media__list__pinterest" do
          %i.fab.fa-pinterest.prodccts-show__link-box__media__list__pinterest__icon
